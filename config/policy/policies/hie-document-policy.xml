<?xml version="1.0" encoding="utf-8"?>
<PolicySet xmlns="urn:oasis:names:tc:xacml:2.0:policy:schema:os"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:pip="urn:hieos:policy:pip"
           xmlns:xacml-context="urn:oasis:names:tc:xacml:2.0:context:schema:os"
           xsi:schemaLocation="urn:oasis:names:tc:xacml:2.0:policy:schema:os http://docs.oasis-open.org/xacml/access_control-xacml-2.0-policy-schema-os.xsd"
           PolicySetId="hie-document-policy-set"
           PolicyCombiningAlgId="urn:oasis:names:tc:xacml:1.0:policy-combining-algorithm:first-applicable">
    <Target>
        <Actions>
            <Action>
                <ActionMatch MatchId="urn:oasis:names:tc:xacml:1.0:function:anyURI-equal">
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#anyURI">evaluate-document-policy</AttributeValue>
                    <ActionAttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:action:action-id" DataType="http://www.w3.org/2001/XMLSchema#anyURI"/>
                </ActionMatch>
            </Action>
        </Actions>
    </Target>

    <!-- These are built as separate policies versus as separate rules in order to give some feedback (via obligations) to the
         caller as to which rule fired -->

    <Policy xmlns="urn:oasis:names:tc:xacml:2.0:policy:schema:os"
         PolicyId="same-pid-policy"
        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable">
        <Description>Deny if the Document's patient id does not match the resource-id.</Description>
        <PolicyDefaults>
            <XPathVersion>http://www.w3.org/TR/1999/Rec-xpath-19991116</XPathVersion>
        </PolicyDefaults>
        <Target/>

        <Rule RuleId="same-pid-rule" Effect="Deny">
            <Description>
                Deny if the Document's patient id does not match the resource-id.
            </Description>
            <Condition>
                <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:not">
                    <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                        <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
                            <ResourceAttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:resource:resource-id" MustBePresent="true" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                        </Apply>
                        <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
                            <AttributeSelector RequestContextPath="//xacml-context:Resource/xacml-context:ResourceContent/pip:DocumentMetadata/pip:PatientId/text()" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                        </Apply>
                    </Apply>
                </Apply>
            </Condition>
        </Rule>
        <Obligations>
            <Obligation ObligationId="same-pid-policy-deny" FulfillOn="Deny"/>
        </Obligations>
    </Policy>

    <Policy xmlns="urn:oasis:names:tc:xacml:2.0:policy:schema:os"
         PolicyId="emergency-access-policy"
        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable">
        <Description>Permit if the subject has an EMERGENCY "purpose of use".</Description>
        <PolicyDefaults>
            <XPathVersion>http://www.w3.org/TR/1999/Rec-xpath-19991116</XPathVersion>
        </PolicyDefaults>
        <Target/>

        <Rule RuleId="emergency-access-rule" Effect="Permit">
            <Description>
                Permit if the subject has an EMERGENCY "purpose of use"
            </Description>
            <Condition>
                <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-is-in">
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">EMERGENCY</AttributeValue>
                    <SubjectAttributeDesignator AttributeId="urn:oasis:names:tc:xspa:1.0:subject:purposeofuse" MustBePresent="false" DataType="http://www.w3.org/2001/XMLSchema#string"  />
                </Apply>
            </Condition>
        </Rule>
        <Obligations>
            <Obligation ObligationId="emergency-access-policy-permit" FulfillOn="Permit"/>
        </Obligations>
    </Policy>

    <Policy xmlns="urn:oasis:names:tc:xacml:2.0:policy:schema:os"
         PolicyId="non-sensitive-document-type-policy"
        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable">
        <Description>non-sensitive document access policy</Description>
        <PolicyDefaults>
            <XPathVersion>http://www.w3.org/TR/1999/Rec-xpath-19991116</XPathVersion>
        </PolicyDefaults>
        <Target/>
        <Rule RuleId="non-sensitive-document-type-rule" Effect="Permit">
            <Description>
                Permit if this is a non-sensitive document and the subject's organization created the document.

                Anything that is not a "V" or "R" confidentiality code is considered non-sensitive
                 Pseudocode:
                  (Document.isSensitive == FALSE)
                     AND (Document.authorOrganizations.contains(Subject.OrganizationId))
            </Description>
            <Condition>
                <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:and">
                    <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:not">
                        <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-at-least-one-member-of">
                            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-bag">
                                <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">R^^2.16.840.1.113883.5.25</AttributeValue>
                                <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">V^^2.16.840.1.113883.5.25</AttributeValue>
                            </Apply>
                            <AttributeSelector RequestContextPath="//xacml-context:Resource/xacml-context:ResourceContent/pip:DocumentMetadata/pip:ConfidentialityCodes/pip:Code/text()" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                        </Apply>
                    </Apply>
                    <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-at-least-one-member-of">
                        <SubjectAttributeDesignator AttributeId="urn:oasis:names:tc:xspa:1.0:subject:organization-id" MustBePresent="true" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                        <AttributeSelector RequestContextPath="//xacml-context:Resource/xacml-context:ResourceContent/pip:DocumentMetadata/pip:Authors/pip:Author/pip:Organizations/pip:Organization/text()" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                    </Apply>
                </Apply>
            </Condition>
        </Rule>
        <Obligations>
            <Obligation ObligationId="non-sensitive-document-type-policy-permit" FulfillOn="Permit"/>
        </Obligations>
    </Policy>

    <Policy xmlns="urn:oasis:names:tc:xacml:2.0:policy:schema:os"
        PolicyId="sensitive-document-type-policy"
        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable">
        <Description>sensitive document access policy</Description>
        <PolicyDefaults>
            <XPathVersion>http://www.w3.org/TR/1999/Rec-xpath-19991116</XPathVersion>
        </PolicyDefaults>
        <Target/>
        <Rule RuleId="sensitive-document-type-rule" Effect="Permit">
            <Description>
                Permit if this is a sensitive document and the subject's organization/provider created the document.

                Anything with a "V" or "R" confidentiality code is considered sensitive
                  Pseudocode:
                  (Document.isSensitive == TRUE)
                     AND (Document.authorOrganizations.contains(Subject.OrganizationId)
                     AND (Document.authorPersons.contains(Subject.Id))

                FIXME: Need to ensure that author person / organizations are compared jointly versus looking
                  @ all nodes ... only an issue if more than one author for a given document ..
            </Description>
            <Condition>
                <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:and">
                    <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-at-least-one-member-of">
                        <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-bag">
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">R^^2.16.840.1.113883.5.25</AttributeValue>
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">V^^2.16.840.1.113883.5.25</AttributeValue>
                        </Apply>
                        <AttributeSelector RequestContextPath="//xacml-context:Resource/xacml-context:ResourceContent/pip:DocumentMetadata/pip:ConfidentialityCodes/pip:Code/text()" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                    </Apply>
                    <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-at-least-one-member-of">
                        <SubjectAttributeDesignator AttributeId="urn:oasis:names:tc:xspa:1.0:subject:organization-id" MustBePresent="true" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                        <AttributeSelector RequestContextPath="//xacml-context:Resource/xacml-context:ResourceContent/pip:DocumentMetadata/pip:Authors/pip:Author/pip:Organizations/pip:Organization/text()" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                    </Apply>
                    <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-at-least-one-member-of">
                        <SubjectAttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:subject:subject-id" MustBePresent="true" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                        <AttributeSelector RequestContextPath="//xacml-context:Resource/xacml-context:ResourceContent/pip:DocumentMetadata/pip:Authors/pip:Author/pip:Person/text()" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                    </Apply>
                </Apply>
            </Condition>
        </Rule>
        <Obligations>
            <Obligation ObligationId="sensitive-document-type-policy-permit" FulfillOn="Permit"/>
        </Obligations>
    </Policy>

    <Policy xmlns="urn:oasis:names:tc:xacml:2.0:policy:schema:os"
        PolicyId="explicit-authorization-document-policy"
        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable">
        <Description>Evaluates patient's desire of ExplicitAuthorizationRequired</Description>
        <PolicyDefaults>
            <XPathVersion>http://www.w3.org/TR/1999/Rec-xpath-19991116</XPathVersion>
        </PolicyDefaults>
        <Target/>       
        
        <Rule RuleId="explicit-authorization-document-deny-rule" Effect="Deny">
            <Description>
                Evaluates patient's desire of ExplicitAuthorizationRequired
                
                Pseudocode:
                (ExplicitAuthorizationRequired == TRUE
                 AND (not(urn:oasis:names:tc:xspa:1.0:subject:hl7:permission)
                     OR urn:oasis:names:tc:xspa:1.0:subject:hl7:permission == NONE
                     OR (urn:oasis:names:tc:xspa:1.0:subject:hl7:permission == NORMAL
                        AND Document.isSensitive == TRUE))             
            </Description>
            <Condition>
                <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:and">
                    <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-is-in">
                        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">ExplicitAuthorizationRequired</AttributeValue>
                        <AttributeSelector RequestContextPath="//xacml-context:Resource/xacml-context:ResourceContent/pip:ConsentDirectives/pip:ConsentOptions/pip:ConsentOption/text()" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                    </Apply>
                    
                    <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:or">
                        
                        <!-- Missing permission -->
                        <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:integer-equal">
                            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-bag-size">
                                <SubjectAttributeDesignator AttributeId="urn:oasis:names:tc:xspa:1.0:subject:hl7:permission" MustBePresent="false" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                            </Apply>
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#integer">0</AttributeValue>
                        </Apply>
                            
                        <!-- NONE permission -->
                        <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-is-in">
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">NONE</AttributeValue>
                            <SubjectAttributeDesignator AttributeId="urn:oasis:names:tc:xspa:1.0:subject:hl7:permission" MustBePresent="false" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                        </Apply>
                        
                        <!-- NORMAL permission and sensitive document -->
                        <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:and">
                            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-is-in">
                                <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">NORMAL</AttributeValue>
                                <SubjectAttributeDesignator AttributeId="urn:oasis:names:tc:xspa:1.0:subject:hl7:permission" MustBePresent="false" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                            </Apply>
                            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-at-least-one-member-of">
                                <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-bag">
                                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">R^^2.16.840.1.113883.5.25</AttributeValue>
                                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">V^^2.16.840.1.113883.5.25</AttributeValue>
                                </Apply>
                                <AttributeSelector RequestContextPath="//xacml-context:Resource/xacml-context:ResourceContent/pip:DocumentMetadata/pip:ConfidentialityCodes/pip:Code/text()" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                            </Apply>
                        </Apply>
                    </Apply>
                </Apply>
            </Condition>
        </Rule>
        
        <Rule RuleId="explicit-authorization-document-permit-rule" Effect="Permit">
            <Description>
                Evaluates patient's desire of ExplicitAuthorizationRequired
                
                Pseudocode:
                (ExplicitAuthorizationRequired == TRUE
                 AND ((urn:oasis:names:tc:xspa:1.0:subject:hl7:permission == RESTRICTED)
                      OR (urn:oasis:names:tc:xspa:1.0:subject:hl7:permission == NORMAL
                        AND Document.isSensitive == FALSE))
                        
            </Description>
            <Condition>
                <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:and">
                    <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-is-in">
                        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">ExplicitAuthorizationRequired</AttributeValue>
                        <AttributeSelector RequestContextPath="//xacml-context:Resource/xacml-context:ResourceContent/pip:ConsentDirectives/pip:ConsentOptions/pip:ConsentOption/text()" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                    </Apply>
                    
                    <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:or">
                        <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-is-in">
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">RESTRICTED</AttributeValue>
                            <SubjectAttributeDesignator AttributeId="urn:oasis:names:tc:xspa:1.0:subject:hl7:permission" MustBePresent="false" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                        </Apply>
                        
                        <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:and">
                            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-is-in">
                                <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">NORMAL</AttributeValue>
                                <SubjectAttributeDesignator AttributeId="urn:oasis:names:tc:xspa:1.0:subject:hl7:permission" MustBePresent="false" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                            </Apply>
                            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:not">
                                <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-at-least-one-member-of">
                                    <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-bag">
                                        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">R^^2.16.840.1.113883.5.25</AttributeValue>
                                        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">V^^2.16.840.1.113883.5.25</AttributeValue>
                                    </Apply>
                                    <AttributeSelector RequestContextPath="//xacml-context:Resource/xacml-context:ResourceContent/pip:DocumentMetadata/pip:ConfidentialityCodes/pip:Code/text()" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                                </Apply>
                            </Apply>
                        </Apply>
                    </Apply>                
                </Apply>
            </Condition>
        </Rule>
        
        <Obligations>
            <Obligation ObligationId="explicit-authorization-document-policy-deny" FulfillOn="Deny"/>
            <Obligation ObligationId="explicit-authorization-document-policy-permit" FulfillOn="Permit"/>
        </Obligations>
    </Policy>
    
    <Policy xmlns="urn:oasis:names:tc:xacml:2.0:policy:schema:os"
        PolicyId="patient-consent-policy"
        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable">
        <Description>Evaluate document against Patient Consent Directives</Description>
        <PolicyDefaults>
            <XPathVersion>http://www.w3.org/TR/1999/Rec-xpath-19991116</XPathVersion>
        </PolicyDefaults>
        <Target/>       
        
        <Rule RuleId="patient-consent-deny-rule" Effect="Deny">
            <Description>
               Evaluate document against Patient Consent Directives

               Possible ConsentRule attributes:
                  purposeofuse (CNE_code_only)
                  organization (XON_id_only)
                  individual (XCN_id_only)
                  role (CNE_code_only)
                  documenttype (CNE_code_only)
                  documentid (OID)
                  confidentialitycode (CNE_code_only)

               NOTE: homecommunityid is not used 

               NOTE: Tried to use a VariableReference to avoid duplication with no luck.
            </Description>
            <Condition>
                <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:integer-greater-than">
                    <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:xpath-node-count">
                        <Apply FunctionId="urn:oasis:names:tc:xacml:2.0:function:string-concatenate">

                            <!-- begin xpath statement -->
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">//*[local-name()='Resource']/*[local-name()='ResourceContent']/*[local-name()='ConsentDirectives']/*[local-name()='ConsentRules']/*[local-name()='ConsentRule'][@action='deny'</AttributeValue>

                            <!-- Purpose of Use -->
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string"> and (not(@purposeofuse) or @purposeofuse='</AttributeValue>
                            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
                                <SubjectAttributeDesignator AttributeId="urn:oasis:names:tc:xspa:1.0:subject:purposeofuse" MustBePresent="false" DataType="http://www.w3.org/2001/XMLSchema#string"  />
                            </Apply>
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">')</AttributeValue>

                            <!-- Organization -->
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string"> and (not(@organization) or @organization='</AttributeValue>
                            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
                                <SubjectAttributeDesignator AttributeId="urn:oasis:names:tc:xspa:1.0:subject:organization-id" MustBePresent="false" DataType="http://www.w3.org/2001/XMLSchema#string"  />
                            </Apply>
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">')</AttributeValue>

                            <!-- Individual -->
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string"> and (not(@individual) or @individual='</AttributeValue>
                            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
                                <SubjectAttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:subject:subject-id" MustBePresent="false" DataType="http://www.w3.org/2001/XMLSchema#string"  />
                            </Apply>
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">')</AttributeValue>

                            <!-- Role -->
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string"> and (not(@role) or @role='</AttributeValue>
                            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
                                <SubjectAttributeDesignator AttributeId="urn:oasis:names:tc:xacml:2.0:subject:role" MustBePresent="false" DataType="http://www.w3.org/2001/XMLSchema#string"  />
                            </Apply>
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">')</AttributeValue>

                            <!-- Document Type -->
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string"> and (not(@documenttype) or @documenttype='</AttributeValue>
                            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
                                <AttributeSelector RequestContextPath="//xacml-context:Resource/xacml-context:ResourceContent/pip:DocumentMetadata/pip:Type/text()" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                            </Apply>
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">')</AttributeValue>

                            <!-- Document Id -->
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string"> and (not(@documentid) or @documentid='</AttributeValue>
                            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
                                <AttributeSelector RequestContextPath="//xacml-context:Resource/xacml-context:ResourceContent/pip:DocumentMetadata/pip:Id/text()" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                            </Apply>
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">')</AttributeValue>

                            <!-- Confidentiality Code -->
                            <!--
                             FIXME: Need to accommodate the fact that there can be one than one code (on a document)
                             -->
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string"> and (not(@confidentialitycode) or @confidentialitycode='</AttributeValue>
                            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
                                <AttributeSelector RequestContextPath="//xacml-context:Resource/xacml-context:ResourceContent/pip:DocumentMetadata/pip:ConfidentialityCodes/pip:Code[1]/text()" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                            </Apply>
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">')</AttributeValue>
                            
                            <!-- End xpath statement -->
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">]</AttributeValue>
                        </Apply>
                    </Apply>
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#integer">0</AttributeValue>
                </Apply>
            </Condition>
        </Rule>

        <Rule RuleId="patient-consent-permit-rule" Effect="Permit">
            <Description>
               Evaluate document against Patient Consent Directives

               Possible ConsentRule attributes:
                  purposeofuse (CNE_code_only)
                  organization (XON_id_only)
                  individual (XCN_id_only)
                  role (CNE_code_only)
                  documenttype (CNE_code_only)
                  documentid (OID)
                  confidentialitycode (CNE_code_only)

               NOTE: homecommunityid is not used 

               NOTE: Tried to use a VariableReference to avoid duplication with no luck.
            </Description>
            <Condition>
                <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:integer-greater-than">
                    <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:xpath-node-count">
                        <Apply FunctionId="urn:oasis:names:tc:xacml:2.0:function:string-concatenate">

                            <!-- begin xpath statement -->
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">//*[local-name()='Resource']/*[local-name()='ResourceContent']/*[local-name()='ConsentDirectives']/*[local-name()='ConsentRules']/*[local-name()='ConsentRule'][@action='permit'</AttributeValue>

                            <!-- Purpose of Use -->
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string"> and (not(@purposeofuse) or @purposeofuse='</AttributeValue>
                            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
                                <SubjectAttributeDesignator AttributeId="urn:oasis:names:tc:xspa:1.0:subject:purposeofuse" MustBePresent="false" DataType="http://www.w3.org/2001/XMLSchema#string"  />
                            </Apply>
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">')</AttributeValue>

                            <!-- Organization -->
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string"> and (not(@organization) or @organization='</AttributeValue>
                            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
                                <SubjectAttributeDesignator AttributeId="urn:oasis:names:tc:xspa:1.0:subject:organization-id" MustBePresent="false" DataType="http://www.w3.org/2001/XMLSchema#string"  />
                            </Apply>
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">')</AttributeValue>

                            <!-- Individual -->
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string"> and (not(@individual) or @individual='</AttributeValue>
                            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
                                <SubjectAttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:subject:subject-id" MustBePresent="false" DataType="http://www.w3.org/2001/XMLSchema#string"  />
                            </Apply>
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">')</AttributeValue>

                            <!-- Role -->
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string"> and (not(@role) or @role='</AttributeValue>
                            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
                                <SubjectAttributeDesignator AttributeId="urn:oasis:names:tc:xacml:2.0:subject:role" MustBePresent="false" DataType="http://www.w3.org/2001/XMLSchema#string"  />
                            </Apply>
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">')</AttributeValue>

                            <!-- Document Type -->
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string"> and (not(@documenttype) or @documenttype='</AttributeValue>
                            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
                                <AttributeSelector RequestContextPath="//xacml-context:Resource/xacml-context:ResourceContent/pip:DocumentMetadata/pip:Type/text()" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                            </Apply>
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">')</AttributeValue>

                            <!-- Document Id -->
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string"> and (not(@documentid) or @documentid='</AttributeValue>
                            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
                                <AttributeSelector RequestContextPath="//xacml-context:Resource/xacml-context:ResourceContent/pip:DocumentMetadata/pip:Id/text()" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                            </Apply>
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">')</AttributeValue>

                            <!-- Confidentiality Code -->
                            <!--
                             FIXME: Need to accommodate the fact that there can be one than one code (on a document)
                             -->
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string"> and (not(@confidentialitycode) or @confidentialitycode='</AttributeValue>
                            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
                                <AttributeSelector RequestContextPath="//xacml-context:Resource/xacml-context:ResourceContent/pip:DocumentMetadata/pip:ConfidentialityCodes/pip:Code[1]/text()" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                            </Apply>
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">')</AttributeValue>
                            
                             <!-- End xpath statement -->
                            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">]</AttributeValue>
                        </Apply>
                    </Apply>
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#integer">0</AttributeValue>
                </Apply>
            </Condition>
        </Rule>

        <Obligations>
            <Obligation ObligationId="patient-consent-policy-deny" FulfillOn="Deny"/>
            <Obligation ObligationId="patient-consent-policy-permit" FulfillOn="Permit"/>
        </Obligations>

    </Policy>

    <Policy xmlns="urn:oasis:names:tc:xacml:2.0:policy:schema:os"
         PolicyId="final-policy"
        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable">
        <Description>Deny if no other policies/rules fired.</Description>
        <PolicyDefaults>
            <XPathVersion>http://www.w3.org/TR/1999/Rec-xpath-19991116</XPathVersion>
        </PolicyDefaults>
        <Target/>

         <!-- Default Deny rule (if no Permit rules fired above) -->
        <Rule RuleId="final-rule" Effect="Deny"/>

        <Obligations>
            <Obligation ObligationId="final-policy-deny" FulfillOn="Deny"/>
            <Obligation ObligationId="final-policy-permit" FulfillOn="Permit"/>
        </Obligations>
    </Policy>
       
</PolicySet>
