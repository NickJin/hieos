    <Policy xmlns="urn:oasis:names:tc:xacml:2.0:policy:schema:os"
        PolicyId="authorisation-not-required-policy"
        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable">
        <PolicyDefaults>
            <XPathVersion>http://www.w3.org/TR/1999/Rec-xpath-19991116</XPathVersion>
        </PolicyDefaults>
        <Target/>       
        
        <Rule RuleId="authorisation-not-required-rule" Effect="Permit">
            <Description>
                
                ** This must come after the explicit deny rule (patient-consent-deny-rule) **
                
                Permit if AuthorisationNotRequired is selected (mode 0)
                
                Mode 0: all providers in the community have access to patient 
                documents unless explicitly blocked.                  
                
                Authorisation not required: Mode 0 is selected, that is, 
                all providers in the community have access to patient 
                documents unless explicitly blocked.                
                
                Pseudocode:
                (ExplicitAuthorisationNotRequired exists)
            </Description>
            <Condition>
                <!-- Consent Option Exists -->
                <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-is-in">
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">ExplicitAuthorisationNotRequired</AttributeValue>
                    <AttributeSelector RequestContextPath="//xacml-context:Resource/xacml-context:ResourceContent/pip:ConsentDirectives/pip:ConsentOptions/pip:ConsentOption/text()" DataType="http://www.w3.org/2001/XMLSchema#string"/>
                </Apply>
            </Condition>
        </Rule>
        
        <Obligations>
            <Obligation ObligationId="authorisation-not-required-policy-permit" FulfillOn="Permit"/>
        </Obligations>
    </Policy>

